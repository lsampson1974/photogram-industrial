<!-- app/views/users/feed.html.erb -->

<div class="row">
  <div class="col md-6 offset-3">
    <h1>
      <%= @user.username  %>
    </h1>

    <ul class="nav nav-pills nav-justified">
      <li class="nav-item">
        <%= link_to "Posts", user_path(@user.username), class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Liked photos", liked_path(@user.username), class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Feed", feed_path(@user.username), class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Followers", followers_path(@user.username), class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Following", following_path(@user.username), class: "nav-link" %>
      </li>
    </ul>

    <% @user.leaders.each do |leader| %>
        <ul class="list-group">

          <li class="list-group-item">
            <%= link_to "#{leader.username}", user_path(leader.username), class: "nav-link" %>
          </li>

        </ul>
    <% end %>


  </div>
</div>
